<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
   根：mapper
      属性：namespace：映射的dao的全限定名：com.neuedu.dao.IUserDAO
-->
<mapper namespace = "repository.IUserRepositoryXML">
    <!--
        属性：id：设置时dao中方法名
        resultType:设置返回的类型：元素类型
    -->
    <select id="getAll" resultType="entity.User">
          select * from t_user
    </select>

    <select id="getOne" parameterType="int" resultType="entity.User">
        select * from t_user where uid = #{id}
    </select>
</mapper>